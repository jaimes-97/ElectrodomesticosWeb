@model IEnumerable<ElectrodomesticosWeb.Models.DetalleProducto>


@{
    ViewBag.Title = "Home Page";
}



<style>
    #wrapper {
    width:600px; 
    margin:0 auto; /*centers the div horizontally in all browsers (except IE)*/
    background:#fff; 
    text-align:left; /*resets text alignment from body tag */
    border:1px solid #ccc;
    border-top:none; 
    padding:25px; 
    /*Let's add some CSS3 styles, these will degrade gracefully in older browser and IE*/
    border-radius:0 0 5px 5px;
    -moz-border-radius:0 0 5px 5px;
    -webkit-border-radius: 0 0 5px 5px; 
    box-shadow:0 0 5px #ccc;
    -moz-box-shadow:0 0 5px #ccc;
    -webkit-box-shadow:0 0 5px #ccc;
}

    #lightbox {
    position:fixed; /* keeps the lightbox window in the current viewport */
    top:0; 
    left:0; 
    width:100%; 
    height:100%; 
    background: rgba(0,0,0,.7);
    text-align:center;
   
}

    #lightbox p {
    text-align:right; 
    color:#fff; 
    margin-right:20px; 
    font-size:12px; 
}

        #lightbox img {
            margin-top:70px;
            box-shadow: 0 0 25px #111;
            -webkit-box-shadow: 0 0 25px #111;
            -moz-box-shadow: 0 0 25px #111;
            max-width: 940px;
            height:350px;
            width:350px;
            z-index:1;
        }

        .productoBox{
   border:1px solid black;
   
           
        }

         .add{

   background: #e81717;
  background-image: -webkit-linear-gradient(top, #e81717, #f0bdbd);
  background-image: -moz-linear-gradient(top, #e81717, #f0bdbd);
  background-image: -ms-linear-gradient(top, #e81717, #f0bdbd);
  background-image: -o-linear-gradient(top, #e81717, #f0bdbd);
  background-image: linear-gradient(to bottom, #e81717, #f0bdbd);
  -webkit-border-radius: 19;
  -moz-border-radius: 19;
  border-radius: 19px;
  font-family: Arial;
  color: #fff7f7;
  font-size: 20px;
  /*/padding: 10px 20px 10px 20px;*/
  text-decoration: none;
  padding-left:100px;



        }

          .add:hover {
      background: #990b0b;
  background-image: -webkit-linear-gradient(top, #990b0b, #c295b4);
  background-image: -moz-linear-gradient(top, #990b0b, #c295b4);
  background-image: -ms-linear-gradient(top, #990b0b, #c295b4);
  background-image: -o-linear-gradient(top, #990b0b, #c295b4);
  background-image: linear-gradient(to bottom, #990b0b, #c295b4);
  text-decoration: none;
  
}


         .productoBox *{

             font-family:Courier New;
             text-align:center;
             background-color:#F2F2F2
             
         }
       
 


 

  

</style>



    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script> 
  <script type="text/javascript" src="~/Scripts/PoopUp.js"></script> 



<div id="myCarousel" class="carousel slide" data-ride="carousel">
   
    
    
     <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img height="100" width="300" src="https://js-1000-assets-production.jetscale.net/medium/17532/file_name/B0000000001547l.jpg" alt="Chania">
            <div class="carousel-caption">
                <h3 style="color:black">Licuadora</h3>
                <p style="color:black">Producto con un 20% de descuento, aprovecha ya!.</p>
            </div>
        </div>

        <div class="item">
            <img src="http://www.diproelsac.com/tienda/c/23-category_default/microondas.jpg" alt="Chania">
            <div class="carousel-caption">
                <h3 style="color:black">Microondas</h3>
                <p style="color:black">Crucial para tu cocina.</p>
            </div>
        </div>

        <div class="item">
            <img height="100" width="300" src="http://www.que.es/archivos/201505/savoid-normal-672xXx80.jpg" alt="Flower">
            <div class="carousel-caption">
                <h3 style="color:black">Refigeradora</h3>
                <p style="color:black">Una refrigeradora muy atractiva para tu cocina.</p>
            </div>
        </div>

        <div class="item">
            <img height="100" width="300" src="http://www.remediosya.com/img/lavarropas-23c35a9c02525c291d2a837519419511.jpg" alt="Flower">
            <div class="carousel-caption">
                <h3 style="color:black">Lavadora</h3>
                <p style="color:black">Lavadora con la tecnonogía mas avanzada hasta el momento.</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>








<br />
<div class="row">
@foreach (var item in Model)
{

    <div class="col-md-4" style="margin-bottom:50px">
        <div class="productoBox">
            @if (@item.Imagen != null)
                {

                <img class="lightbox_trigger" style="width:100%" src="~/Imagenes/@item.Imagen.ImageName" height="200px" />


            }











            <dt>
                @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </dt>

            <dt>
                @Html.DisplayFor(modelItem => item.Color)
            </dt>

            <dt>
                @Html.DisplayFor(modelItem => item.marca)
            </dt>

            <dt>
                @Html.DisplayFor(modelItem => item.precio)
            </dt>
        </div>



        

            <dt>
                <div class="add">

                    @Html.ActionLink("Añadir al carrito", "create", "Compras", new { Id = item.Id }, null)
                </div>
        </dt>





    </div>

}


</div>
    

